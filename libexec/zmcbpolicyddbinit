# This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY;
# without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
# See the GNU General Public License for more details.
# You should have received a copy of the GNU General Public License along with this program.
# If not, see <https://www.gnu.org/licenses/>.
# ***** END LICENSE BLOCK *****
# 

source /opt/zimbra/bin/zmshutil || exit 1
zmsetvars

sql_root_pw=$1

zmassert -x /opt/zimbra/bin/cbpolicyd-mysqladmin
zmassert -x /opt/zimbra/bin/cbpolicyd-mysql
zmassert -x /opt/zimbra/bin/zmlocalconfig
zmassert -x /opt/zimbra/bin/zmcbpolicyddbpasswd
zmassert -x /opt/zimbra/common/share/mysql/scripts/mysql_install_db
zmassert -r /opt/zimbra/data/amavisd/mysql/cbpolicyddb.sql

# Check if log directory exists.  If not, create.
if [ ! -d ${zimbra_log_directory} ]; then
	mkdir -p ${zimbra_log_directory}
fi

# Create cbpolicyd-my.cnf file if it does not exist
#
if [ ! -s ${cbpolicyd_mysql_mycnf} ]; then 
    /opt/zimbra/libexec/zmcbpolicydcnf > ${cbpolicyd_mysql_mycnf}
fi

# Create database
#
echo '*' Creating database in ${cbpolicyd_mysql_data_directory}
(/opt/zimbra/common/share/mysql/scripts/mysql_install_db \
    --basedir=/opt/zimbra/common \
    --datadir=${cbpolicyd_mysql_data_directory} \
    --defaults-file=${cbpolicyd_mysql_mycnf} ) \
    >> ${zimbra_log_directory}/zmcbpolicyddbinit.log 2>&1
    

# Start mysql server for cbpolicyd db
#
zmassert -d `dirname ${cbpolicyd_mysql_pidfile}`
if [ -f ${cbpolicyd_mysql_pidfile} ]; then
    pid=`cat ${cbpolicyd_mysql_pidfile}`
fi
if [ "x$pid" != "x" ]; then
    kill -0 $pid 2> /dev/null
    if [ $? = 0 ]; then
        # What the heck happened here.  mysqld_safe for anti-spam should not already be running!
        echo "mysqld_safe for anti-spam already running with pid $pid"
        exit 1
    fi
fi
# --defaults-file must be first argument
echo -n '*' Starting cbpolicyd mysql server ...
/opt/zimbra/common/bin/mysqld_safe \
    --defaults-file=${cbpolicyd_mysql_mycnf} \
    --basedir=/opt/zimbra/common \
    --datadir=${cbpolicyd_mysql_data_directory} \
    --external-locking \
    --log-error=${cbpolicyd_mysql_errlogfile} \
    --ledir=/opt/zimbra/common/sbin < /dev/null > /dev/null 2>&1 &
SQLSTARTED=0
for ((i = 0; i < 60; i++))
do
    /opt/zimbra/bin/cbpolicyd-mysqladmin -s ping 2>&1 > /dev/null
    if [ $? = 0 ]; then
        SQLSTARTED=1
        break
    fi
    sleep 2
done
if [ ${SQLSTARTED} -ne 1 ]; then
    echo "failed."
        exit 1
else
    echo "done."
fi

# Load zimbra sql files
#
echo '*' Loading schema /opt/zimbra/data/amavisd/mysql/cbpolicyddb.sql
/opt/zimbra/bin/cbpolicyd-mysql -u root --password= < \
    /opt/zimbra/data/amavisd/mysql/cbpolicyddb.sql


#
# Generate passwords for mysql into local config
#
if [ x$sql_root_pw = "x" ]; then
    echo '*' Setting random password for cbpolicyd mysql root user in zimbra local config
    /opt/zimbra/bin/zmlocalconfig -r -f -e cbpolicyd_mysql_root_password

    echo '*' Setting random password for cbpolicyd mysql zimbra user in zimbra local config
    /opt/zimbra/bin/zmlocalconfig -r -f -e cbpolicyd_mysql_password
else
    echo '*' Setting password for cbpolicyd mysql root user in zimbra local config
    /opt/zimbra/bin/zmlocalconfig -f -e cbpolicyd_mysql_root_password=$sql_root_pw
    echo '*' Setting password for cbpolicyd mysql zimbra user in zimbra local config
    /opt/zimbra/bin/zmlocalconfig -f -e cbpolicyd_mysql_password=$sql_root_pw
fi

#
# Change mysql root user password, but first read back the passwords 
# zimbra local config - they was generated above.  Note that we can not
# use 'zmmypasswd --root' here because of bootstrapping problems - at
# this stage we know that the root password is empty.
#
zmsetvars -f
echo '*' Changing cbpolicyd mysql root user password
/opt/zimbra/bin/cbpolicyd-mysqladmin -u root --password= password ${cbpolicyd_mysql_root_password}

echo '*' Changing cbpolicyd mysql user password
/opt/zimbra/bin/zmcbpolicyddbpasswd ${cbpolicyd_mysql_password}

